<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/notes_background"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cabecera con nombre del lugar -->
    <TextView
        android:id="@+id/txtPlaceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/notes_header"
        android:textColor="@color/notes_text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp"/>

    <!-- RecyclerView con padding interno para separar notas de los bordes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"/>

    <!-- Área de nueva nota -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <!-- EditText para escribir nota -->
        <EditText
            android:id="@+id/edtNewNote"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Escribe una nota..."
            android:background="@null"
            android:textColor="@color/notes_text"
            android:padding="8dp"/>

        <!-- Botón agregar nota -->
        <Button
            android:id="@+id/btnAddNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:background="@null"
            android:textColor="@color/notes_text"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>
